{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare-env-pre",
            "command": "./scripts/prepare-env.sh",
            "args": ["pre"],
            "type": "shell"
        },
        {
            "label": "prepare-env-prod",
            "command": "./scripts/prepare-env.sh",
            "args": ["prod"],
            "type": "shell"
        },
        {
            "label": "build-pre-apk",
            "command": "flutter",
            "args": ["build", "apk", "--flavor=pre"],
            "type": "shell"
        },
        {
            "label": "build-prod-aab",
            "command": "flutter",
            "args": ["build", "appbundle", "--flavor=prod", "--release"],
            "type": "shell"
        },
        {
            "label": "open-pre-apk-path",
            "command": "open",
            "args": ["build/app/outputs/flutter-apk/"],
            "type": "shell"
        },
        {
            "label": "open-prod-aab-path",
            "command": "open",
            "args": ["build/app/outputs/bundle/prodRelease"],
            "type": "shell"
        },
        {
            "label": "Build APK pre",
            "dependsOrder": "sequence",
            "dependsOn": [
                "prepare-env-pre",
                "build-pre-apk",
                "open-pre-apk-path"
            ]
        },
        {
            "label": "Build AAB prod",
            "dependsOrder": "sequence",
            "dependsOn": [
                "prepare-env-prod",
                "build-prod-aab",
                "open-prod-aab-path"
            ]
        },
        {
            "label": "Build AAB pre",
            "dependsOrder": "sequence",
            "dependsOn": [
                "prepare-env-pre",
                "build-prod-aab",
                "open-prod-aab-path"
            ]
        }
    ]
}