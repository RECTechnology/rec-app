{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare-env-pre",
            "command": "./scripts/prepare-env.sh",
            "args": ["pre"],
            "type": "shell"
        },
        {
            "label": "prepare-env-prod",
            "command": "./scripts/prepare-env.sh",
            "args": ["pre"],
            "type": "shell"
        },
        {
            "label": "build-pre-apk",
            "command": "flutter",
            "args": ["build", "apk", "--flavor=pre"],
            "type": "shell"
        },
        {
            "label": "open-pre-apk-path",
            "command": "open",
            "args": ["build/app/outputs/flutter-apk/"],
            "type": "shell"
        },
        {
            "label": "Build APK pre",
            "dependsOrder": "sequence",
            "dependsOn": [
                "prepare-env-pre",
                "build-pre-apk",
                "open-pre-apk-path"
            ]
        }
    ]
}